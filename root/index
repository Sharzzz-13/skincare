  <script>
function renderCarouselProducts() {
  fetch('http://localhost:5000/api/products')
    .then(res => res.json())
    .then(products => {
      window.productData = products;
      const carousel = document.getElementById('carousel-products');
      if (!carousel) return;
      let html = '';
      products.slice(0, 4).forEach(p => {
        html += `
          <div class="rhode-product-card" data-product-id="${p.id}">
            <img src="../images/${p.id}.jpg" alt="${p.name}">
            <div class="rhode-product-info">
              <span class="rhode-product-name">${p.name.toLowerCase()}</span>
              <span class="rhode-product-desc">${p.desc || ''}</span>
              <span class="rhode-product-price">â‚¹${p.price}</span>
              <div class="product-qty-controls" id="qty-controls-${p.id}"></div>
            </div>
          </div>
        `;
      });
      carousel.innerHTML = html;
      if (window.renderProductQtyControls) renderProductQtyControls();
    })
    .catch(() => {
      // Fallback: static demo products
      const products = [
        { id: "1", name: "Radiance Serum", price: 1299, desc: "brightens & evens tone" },
        { id: "2", name: "Hydra Cream", price: 1499, desc: "deep hydration, non-greasy" },
        { id: "3", name: "Purity Cleanser", price: 1199, desc: "gentle, non-stripping" },
        { id: "4", name: "Vitamin C Elixir", price: 1799, desc: "antioxidant boost" }
      ];
      window.productData = products;
      const carousel = document.getElementById('carousel-products');
      if (!carousel) return;
      let html = '';
      products.forEach(p => {
        html += `
          <div class="rhode-product-card" data-product-id="${p.id}">
            <img src="../images/${p.id}.jpg" alt="${p.name}">
            <div class="rhode-product-info">
              <span class="rhode-product-name">${p.name.toLowerCase()}</span>
              <span class="rhode-product-desc">${p.desc || ''}</span>
              <span class="rhode-product-price">â‚¹${p.price}</span>
              <div class="product-qty-controls" id="qty-controls-${p.id}"></div>
            </div>
          </div>
        `;
      });
      carousel.innerHTML = html;
      if (window.renderProductQtyControls) renderProductQtyControls();
    });
}
document.addEventListener('DOMContentLoaded', renderCarouselProducts);
  </script>
